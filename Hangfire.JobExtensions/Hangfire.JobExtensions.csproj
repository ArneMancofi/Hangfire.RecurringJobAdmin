<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFrameworks>netstandard2.0;net462</TargetFrameworks>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <Authors>Brayan Mota</Authors>
      <Copyright>Copyright © 2019-present Hangfire.Extension contributors</Copyright>
      <NeutralLanguage>en</NeutralLanguage>
      <PackageProjectUrl>https://github.com/bamotav/Hangfire.JobExtensions</PackageProjectUrl>
      <RepositoryUrl>https://github.com/bamotav/Hangfire.JobExtensions</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Dashboard\Content\jobextension.js" />
    <None Remove="Dashboard\JobExtension.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Dashboard\Content\jobextension.js" />
    <EmbeddedResource Include="Dashboard\JobExtension.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HangFire.Core" Version="1.7.6" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

</Project>
